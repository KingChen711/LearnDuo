<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>LearnDuo</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css">
    <link rel="stylesheet" href="~/css/output.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="icon" href="~/images/logo.png">
    <!-- Froala Editor -->
    <link href='https://cdn.jsdelivr.net/npm/froala-editor@latest/css/froala_editor.pkgd.min.css' rel='stylesheet'
        type='text/css' />
    <script type='text/javascript'
        src='https://cdn.jsdelivr.net/npm/froala-editor@latest/js/froala_editor.pkgd.min.js'></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
    <!--Tailwind datetime picker-->
    <script src="../path/to/flowbite/dist/datepicker.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/datepicker.min.js"></script>

    <style>
        .select2-results__option img {
            width: 30px;
            height: 30px;
            margin-right: 10px;
        }

        .select2-selection__choice {
            display: flex;
            align-items: center;
            padding: 5px;
            border-radius: 5px;
            margin: 4px;
            background-color: #f1f1f1;
        }

        .select2-selection__choice__display {
            display: flex;
            align-items: center;
            max-width: 25rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            margin-left: 5px;
        }

        .select2-selection__choice__display img {
            width: 35px;
            height: 35px;
            margin-right: 5px;
            margin-left: 0rem;
        }

        .select2-selection__choice__remove {
            margin-left: 5px;
            color: #d9534f;
            cursor: pointer;
        }
    </style>
</head>

<body class="font-sans leading-normal tracking-normal bg-gray-100">

    <nav id="header" class="z-20 fixed top-0 w-full shadow h-20 flex items-center bg-gray-100">
        <div class="mx-auto mt-0 flex w-full flex-wrap items-center justify-between py-3 md:max-w-6xl">

            <div class="pl-4 flex items-center gap-2">
                <img alt="logo" src="/images/logo.png" class="size-9 object-cover" />
                <a class="text-primary no-underline hover:no-underline font-extrabold text-xl" href="/index">
                    LearnDuo
                </a>
            </div>

            <div class="block pr-4 lg:hidden">
                <button id="nav-toggle"
                    class="flex appearance-none items-center rounded border border-gray-600 px-3 py-2 text-gray-500 hover:text-primary hover:border-green-500 focus:outline-none">
                    <svg class="h-3 w-3 fill-current" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <title>Menu</title>
                        <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" />
                    </svg>
                </button>
            </div>

            <div class="z-20 hidden w-full flex-grow bg-gray-100 lg:flex lg:items-center lg:w-auto md:bg-transparent max-md:absolute max-md:top-20 max-md:border-b max-md:border-slate-300"
                id="nav-content">
                <ul class="list-reset flex-1 items-center justify-end lg:flex">
                    <li class="mr-3">
                        <a class="inline-block px-4 py-2 text-gray-600 no-underline hover:text-primary hover:text-underline" asp-area="" asp-page="/reservation/index">
                            Reservations
                        </a>
                    </li>
                    <li class="mr-3">
                        <a class="inline-block px-4 py-2 text-gray-600 no-underline hover:text-primary hover:text-underline" asp-area="" asp-page="/teachingSchedules/index">
                            Teaching Schedules
                        </a>
                    </li>
                    <li class="mr-3">
                        <a class="inline-block px-4 py-2 text-gray-600 no-underline hover:text-primary hover:text-underline" asp-area="" asp-page="/tutor/list">
                            Tutors
                        </a>
                    </li>
                    <li class="mr-3">
                        <a class="inline-block px-4 py-2 text-gray-600 no-underline hover:text-primary hover:text-underline" asp-area="" asp-page="/subject/list">
                            Subjects
                        </a>
                    </li>
                    <li class="mr-3">
                        <a class="inline-block px-4 py-2 text-gray-600 no-underline hover:text-primary hover:text-underline" asp-area="" asp-page="/index">
                            Home
                        </a>
                    </li>
                    <li class="mr-3">
                        <a class="inline-block px-4 py-2 text-gray-600 no-underline hover:text-primary hover:text-underline"
                            asp-area="" asp-page="Privacy">
                            Privacy
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!--Container-->
    <div class="container mx-auto w-full pt-20 md:max-w-7xl px-6 pb-12">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        //Javascript to toggle the menu
        document.getElementById('nav-toggle').onclick = function () {
            document.getElementById("nav-content").classList.toggle("hidden");
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        function formatState(state) {
            if (!state.id) {
                return state.text;
            }
            var baseUrl = state.element.getAttribute('data-image');
            var $state = $(
                '<span><img src="' + baseUrl + '" class="img-flag" /> ' + state.text + '</span>'
            );
            return $state;
        }

        function formatSelection(state) {
            if (!state.id) {
                return state.text;
            }
            var baseUrl = state.element.getAttribute('data-image');
            var $state = $(
                '<span><img src="' + baseUrl + '" class="img-flag" /> ' + state.text + '</span>'
            );
            return $state;
        }

        $(document).ready(function () {
            $('#tutors').select2({
                templateResult: formatState,
                templateSelection: formatSelection,
                placeholder: "Choose a tutor"
            });
        });
    </script>

</body>

</html>