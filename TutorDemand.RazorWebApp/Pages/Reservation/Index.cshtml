@page "{currentPage:int?}"
@using TutorDemand.Data.Entities
@model TutorDemand.Pages.Reservations.IndexModel
@{
    ViewData["Title"] = "Danh sách giao dịch";
}
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf

@functions {

    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(HttpContext).RequestToken;
    }

    
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/css/site.css" rel="stylesheet"/>
</head>
<body class="bg-gray-100">
<div class="container mx-auto p-6">
    <div class="bg-white p-8 rounded shadow-md">
        <h1 class="text-2xl font-bold mb-6">Reservation</h1>
        @if (Model.Reservations != null && Model.Reservations.Any())
        {
            <table class="min-w-full bg-white">
                <thead>
                <tr>
                    <th class="py-2 px-4 border-b">Reservation Id</th>
                    <th class="py-2 px-4 border-b">Create At</th>
                    <th class="py-2 px-4 border-b">Paid Price</th>
                    <th class="py-2 px-4 border-b">Payment Method</th>
                    <th class="py-2 px-4 border-b">Payment Status</th>
                    <th class="py-2 px-4 border-b">Reservation Status</th>
                    <th class="py-2 px-4 border-b">Tutor Name</th>
                    <th class="py-2 px-4 border-b">Subject Name</th>
                    <th class="py-2 px-4 border-b">Action</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var reservation in Model.Reservations)
                {
                    <tr>
                        <th class="py-2 px-4 border-b">@reservation.Id</th>
                        <td class="py-2 px-4 border-b">@reservation.CreatedAt</td>
                        <td class="py-2 px-4 border-b">@reservation.PaidPrice</td>
                        <td class="py-2 px-4 border-b">@reservation.PaymentMethod</td>
                        <td class="py-2 px-4 border-b">@reservation.PaymentStatus</td>
                        <td class="py-2 px-4 border-b">@reservation.ReservationStatus</td>
                        <td class="py-2 px-4 border-b">@reservation.TutorName</td>
                        <td class="py-2 px-4 border-b">@reservation.SubjectName</td>
                        <td class="py-2e px-4 border-b">
                            <a href="/Reservation/Edit?id=@reservation.Id" class="text-blue-500 hover:underline">Update</a>
                            <a href="/Reservation/Delete/@reservation.Id" onclick="return confirmDelete()" class="block rounded-lg bg-gradient-to-r from-teal-400 via-teal-500 to-teal-600 px-4 py-2 text-center font-medium text-white hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-teal-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" type="button">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>

            <div class="mt-4">
                <nav class="flex justify-between">
                    <a class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded @(Model.HasPreviousPage ? "" : "opacity-50 cursor-not-allowed")" href="?currentPage=@(Model.CurrentPage - 1)" @(Model.HasPreviousPage ? "" : "disabled")>
                        Previous
                    </a>
                    <a class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded @(Model.HasNextPage ? "" : "opacity-50 cursor-not-allowed")" href="?currentPage=@(Model.CurrentPage + 1)" @(Model.HasNextPage ? "" : "disabled")>
                        Next
                    </a>
                </nav>
            </div>
        }
        else
        {
            <p>Không có giao dịch nào.</p>
        }
    </div>
</div>
@{
}

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="fixed z-10 inset-0 overflow-y-auto hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>

        <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

        <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6">
            <div>
                <div class="mt-3 text-center sm:mt-5">
                    <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">Confirm Delete</h3>
                    <div class="mt-2">
                        <p class="text-sm text-gray-500">Are you sure you want to delete this item?</p>
                    </div>
                </div>
            </div>
            <div class="mt-5 sm:mt-6">
                <form id="deleteForm" method="post" asp-page="/Reservations/Delete">
                    <input type="hidden" id="deleteReservationId" name="id" value=""/>
                    <input name="__RequestVerificationToken" type="hidden" value="@GetAntiXsrfRequestToken()"/>
                    <button type="submit" class="inline-flex justify-center w-full rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:text-sm">
                        Delete
                    </button>
                    <button type="button" class="mt-3 inline-flex justify-center w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:text-sm" onclick="hideDeleteModal()">
                        Cancel
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.js"></script>

@section Scripts {
    <script>
        function confirmDelete() {
            if (confirm("Are you sure you want to delete this reservation?")) {
                return true;
            }
            return false;
        }
    </script>
}
</body>