@page
@model TutorDemand.Pages.CreateReservationModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký Gia sư</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-6">
        <div class="bg-white p-8 rounded shadow-md">
            <h1 class="text-2xl font-bold mb-6">Đăng ký Gia sư</h1>
            <form method="post">
                <div class="mb-4">
                    <label class="block text-gray-700">Giá khóa học</label>
                    <input type="number" asp-for="Reservation.PaidPrice" class="mt-1 block w-full rounded border-gray-300 shadow-sm" />
                    <span asp-validation-for="Reservation.PaidPrice" class="text-red-600"></span>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700">Phương pháp thanh toán</label>
                    <select asp-for="Reservation.PaymentMethod" class="mt-1 block w-full rounded border-gray-300 shadow-sm">
                        <option value="Cash">Cash</option>
                        <option value="CreditCard">Credit Card</option>
                        <option value="DebitCard">Debit Card</option>
                    </select>
                    <span asp-validation-for="Reservation.PaymentMethod" class="text-red-600"></span>
                </div>
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Đăng ký</button>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.js"></script>
</body>
</html>
