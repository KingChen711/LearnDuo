@page
@model TutorDemand.RazorWebApp.Pages.TeachingSchedules.Index

<section class="flex flex-col">
    <div class="mt-8 flex items-center justify-between gap-x-5">
        <h3 class="text-3xl font-bold">Teaching schedules</h3>

        <a asp-page="/teachingschedules/create" class="mb-2 me-2 rounded-lg bg-primary px-5 py-2.5 text-center text-sm font-medium text-white focus:ring-4 focus:outline-none focus:ring-blue-300">
            Create schedule
        </a>
    </div>

    <form method="get" class="mx-auto flex justify-between gap-x-3 items-center">

        <div class="relative flex-1">
            <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                <svg class="w-4 h-4 text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                </svg>
            </div>
            <input value="@Model.SearchSubject" name="searchSubject" type="search" id="searchSubject" class="w-full p-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500" placeholder="Search subject ..."/>
        </div>

        <div class="relative flex-1">
            <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                <svg class="w-4 h-4 text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                </svg>
            </div>
            <input value="@Model.SearchTutor" name="searchTutor" type="search" id="searchTutor" class="w-full p-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500" placeholder="Search tutor ..."/>
        </div>

        <div class="relative flex-1">
            <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                <svg class="w-4 h-4 text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                </svg>
            </div>
            <input value="@Model.SearchSlot" name="searchSlot" type="search" id="searchSlot" class="w-full p-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500" placeholder="Search slot ..."/>
        </div>
        <button type="submit" class="bg-primary rounded-md py-2 px-4 h-fit text-white">Search</button>
    </form>

    <div class="relative mt-4 overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-left text-sm text-gray-500 rtl:text-right">
            <thead class="bg-primary text-xs uppercase text-white">
            <tr>
                <th scope="col" class="px-6 py-3">
                    <div class="flex items-center text-nowrap">
                        Subject
                    </div>
                </th>
                <th scope="col" class="px-6 py-3">
                    <div class="flex items-center text-nowrap">
                        Tutor
                    </div>
                </th>
                <th scope="col" class="px-6 py-3">
                    <div class="flex items-center text-nowrap">
                        Slot
                    </div>
                </th>
                <th scope="col" class="px-6 py-3">
                    <div class="flex items-center text-nowrap">
                        Meet Room
                    </div>
                </th>
                <th scope="col" class="px-6 py-3">
                    <div class="flex items-center text-nowrap">
                        Room Password
                    </div>
                </th>
                <th scope="col" class="px-6 py-3">
                    <div class="flex items-center text-nowrap">
                        Learn Days
                    </div>
                </th>
                <th scope="col" class="px-6 py-3">
                    <div class="flex items-center text-nowrap">
                        Start Date
                    </div>
                </th>
                <th scope="col" class="px-6 py-3">
                    <div class="flex items-center text-nowrap">
                        End Date
                    </div>
                </th>
                <th scope="col" class="px-6 py-3">
                    <div class="flex items-center text-nowrap">
                        Created At
                    </div>
                </th>
                <th scope="col" class="px-6 py-3">
                    <div class="flex items-center text-nowrap">
                        Updated At
                    </div>
                </th>
                <th scope="col" class="px-6 py-3 text-center">
                    Actions
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var teachingSchedule in Model.TeachingSchedules)
            {
                <tr class="border-b bg-white">
                    <th scope="row" class="whitespace-nowrap text-nowrap px-6 py-4 font-medium text-gray-900">
                        @teachingSchedule.Subject.Name
                    </th>
                    <td class="text-nowrap px-6 py-4">
                        @teachingSchedule.Tutor.Fullname
                    </td>
                    <td class="text-nowrap px-6 py-4">
                        @teachingSchedule.Slot.SlotName
                    </td>
                    <td class="text-nowrap px-6 py-4">
                        @teachingSchedule.MeetRoomCode
                    </td>
                    <td class="text-nowrap px-6 py-4">
                        @teachingSchedule.RoomPassword
                    </td>
                    <td class="text-nowrap px-6 py-4">
                        @teachingSchedule.LearnDays
                    </td>
                    <td class="text-nowrap px-6 py-4">
                        @teachingSchedule.StartDate
                    </td>
                    <td class="text-nowrap px-6 py-4">
                        @teachingSchedule.EndDate
                    </td>
                    <td class="text-nowrap px-6 py-4">
                        @teachingSchedule.CreationDate
                    </td>
                    <td class="text-nowrap px-6 py-4">
                        @teachingSchedule.LastUpdated
                    </td>
                    <td class="flex justify-center gap-x-2 px-6 py-4">
                        <a asp-page="/teachingschedules/detail" asp-route-id="@teachingSchedule.TeachingScheduleId" class="rounded-md bg-info px-4 py-2 font-medium text-white">Detail</a>
                        <a asp-page="/teachingschedules/update" asp-route-id="@teachingSchedule.TeachingScheduleId" class="rounded-md bg-warning px-4 py-2 font-medium text-white">Edit</a>
                        <form method="post" asp-page="/teachingschedules/delete" asp-route-id="@teachingSchedule.TeachingScheduleId" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <button class="rounded-md bg-danger px-4 py-2 font-medium text-white">Delete</button>
                        </form>
                    </td>
                </tr>
            }

            </tbody>
        </table>
    </div>

    <div class="mx-auto mt-6 flex items-center gap-x-4">
        @if (Model.Metadata.HasPrevious)
        {
            <a href="/teachingschedules?pageSize=5&pageNumber=@(Model.Metadata.CurrentPage - 1)&searchSubject=@Model.SearchSubject&searchTutor=@Model.SearchTutor"
               class="cursor-pointer font-medium text-slate-400 hover:text-primary">
                Previous
            </a>
        }
        else
        {
            <div class="cursor-not-allowed font-medium text-slate-400">Previous</div>
        }

        <div class="flex items-center">
            Page @Model.Metadata.CurrentPage/@Model.Metadata.TotalPages
        </div>

        @if (Model.Metadata.HasNext)
        {
            <a href="/teachingschedules?pageSize=5&pageNumber=@(Model.Metadata.CurrentPage + 1)&searchSubject=@Model.SearchSubject&searchTutor=@Model.SearchTutor"
               class="cursor-pointer font-medium text-slate-400 hover:text-primary">
                Next
            </a>
        }
        else
        {
            <div class="cursor-not-allowed font-medium text-slate-400">Next</div>
        }
    </div>
</section>

@section Scripts
{
    @{
        <script>
            const currentUrl = window.location.href;
            
            // Step 2: Create a URL object
            const url = new URL(currentUrl);
            
            // Step 3: Use URLSearchParams to get the value of the query parameter
            const queryParams = new URLSearchParams(url.search);
            const queryValue = queryParams.get('query');
        </script>
    }
}